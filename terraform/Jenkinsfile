pipeline {
    agent any
    environment{
        COMMIT_HASH = sh(returnStdout: true, script: "git rev-parse --short=8 HEAD").trim()
    }
    stages{
        stage('Terraform plan'){
            steps{
                dir("terraform"){
                    sh "dir"
                    sh "terraform init"
                    sh "terraform plan -out plan-${COMMIT_HASH}.tf -no-color > plan-${COMMIT_HASH}.txt"
                    //need to scan the document here 
                }
            }
        }
        stage('Terraform apply'){
            steps{
                dir("terraform"){
                    sh "terraform apply --auto-approve -no-color plan.tf-${COMMIT_HASH}"
                }
            }
        }
    }
}